<div class="issue-page">
  <form class="issue-form" action="/projects/<%= projectId %>/create-issue" method="POST">
    <h2 class="issue-form-heading">Create new issue</h2>

    <label for="title">Title:</label>
    <input type="text" name="title" required>
  
    <label for="description">Description:</label>
    <textarea rows="5" name="description" required></textarea>
  
    <label for="labels">Labels:</label>
    <input type="text" list="label-suggestions" id="labels" name="labels" autocomplete="off">
    <datalist id="label-suggestions">
      <% project.labels.forEach(label => { %>
        <option value="<%= label %>"><%= label %></option>
      <% }) %>
    </datalist>
  
    <label for="author">Author:</label>
    <input type="text" name="author" required>
  
    <button class="create-issue-btn" type="submit">Create Issue</button>
  </form>
</div>